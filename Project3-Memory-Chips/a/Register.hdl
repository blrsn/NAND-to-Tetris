/**
 * 16-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 * else out does not change
 */

CHIP Register {
    IN in[16], load;
    OUT out[16];

    PARTS:
    Mux16( a=preout, b=in, sel=load, out=mux_out);
    DFF( in=mux_out, out=preout );
    And16( a=true, b=preout, out=out);
}
